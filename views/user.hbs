<main>
    <a href="/">Strona głowna</a>
    {{#if _id}}
    {{>singleUser}}
    {{else}}
    <h2>Użytkownicy</h2>

  
    <div class="user">
        
        <table>
            <thead>
                <tr>
                    <th scope="col">Imię</th>
                    <th scope="col">Nazwisko</th>
                    <th scope="col">Strona internetowa</th>
                    <th scope="col">Adres</th>
                </tr>
            </thead>

            <tbody>
                  {{#each users}}
                <tr>
                    <th scope="row">{{name}}</th>
                    <th>{{username}}</th>
                    <td><a href="http://{{website}}">{{website}}</a></td>
                    <td> <span>miasto:</span> {{address.city}}<br>
                        <span>ulica:</span> {{address.street}}<br>
                        <span>numer:</span> {{address.suite}}<br>
                        <span>kod pocztowy</span> {{address.zipcode}}
                    </td>
                   
                </tr>
                    {{/each}}
            </tbody>
        </table>

    </div>


    {{/if}}



</main>